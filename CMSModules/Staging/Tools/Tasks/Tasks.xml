<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="view" externalsourcename="taskview" caption="$General.View$" icon="View.png" />
    <action name="synchronize" caption="$general.synchronize$" icon="Synchronize.png" />
    <action name="delete" caption="$General.Delete$" icon="Delete.png" confirmation="$General.ConfirmDelete$" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="TaskTitle" caption="$tasks.headertitle$" wrap="false" width="100%" allowsorting="true" sort="TaskTitle" >
      <tooltip source="TaskTitle" width="0" />
    </column>
    <column source="TaskType" caption="$Tasks.HeaderType$"  />
    <column source="TaskTime" externalsourcename="TaskTime" caption="$tasks.headertime$" wrap="false"  />
    <column source="##ALL##" externalsourcename="TaskResult" caption="$tasks.headerresult$"  />
  </columns>
  <pager>
    <key name="PageSizeOptions" value="10,15,25,50,100,##ALL##" />
    <key name="DefaultPageSize" value="15" />
  </pager>
  <options>
    <key name="ShowSelection" value="true" />
    <key name="SelectionColumn" value="TaskID" />
  </options>
</grid>