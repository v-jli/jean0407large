<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="NodeID;DocumentCulture">
    <action name="edit" externalsourcename="edit" caption="$General.Edit$"  icon="Edit.png" onclick="EditBlog({0}, '{1}'); return false;"/>
    <action name="newPost" externalsourcename="newpost" caption="$mydesk.myblogs.unigrid.action.newPost$" icon="AddPost.png" onclick="NewPost({0}, '{1}'); return false;"/>
  </actions>
  <columns>
    <column source="BlogName" caption="$general.name$" wrap="false">
      <filter type="text" />
    </column>
    <column width="100%" />
  </columns>
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>