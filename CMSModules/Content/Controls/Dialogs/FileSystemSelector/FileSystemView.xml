<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="select" externalsourcename="select" caption="$dialogs.list.actions.select$" icon="Next.png" />
    <action name="selectsubdocs" externalsourcename="selectsubdocs" caption="$dialogs.list.actions.showsubfolders$" icon="subdocument.png" />
    <action name="delete" externalsourcename="delete" caption="$dialogs.list.actions.delete$" icon="Delete.png" />
    <action name="edit" externalsourcename="edit" caption="$dialogs.list.actions.edit$" icon="Edit.png" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="name" caption="$general.name$" width="100%" wrap="false" sort="name" >
    </column>
    <column source="##ALL##" externalsourcename="type" caption="$general.type$" wrap="false" sort="type">
    </column>
    <column source="##ALL##" externalsourcename="size" caption="$general.size$" wrap="false"  sort="size">
    </column>
    <column source="##ALL##" externalsourcename="filemodified" caption="$general.modified$" wrap="false" sort="filemodified">
    </column>
  </columns>
  <pager>
    <key name="PageSizeOptions" value="10,20,50,100,##ALL##" />
    <key name="DefaultPageSize" value="10" />
  </pager>
  <options>
    <key name="DisplayPageSizeDropdown" value="true" />
    <key name="DisplayFilter" value="false" />
    <key name="ShowSelection" value="false" />
  </options>
</grid>
