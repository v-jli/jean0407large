<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="select" externalsourcename="select" caption="$dialogs.list.actions.select$" icon="next.png" />
    <action name="selectsubfolders" externalsourcename="selectsubfolders" caption="$dialogs.list.actions.showsubfolders$" icon="subdocument.png" />
    <action name="view" externalsourcename="view" caption="$dialogs.list.actions.view$" icon="View.png" />
    <action name="edit" externalsourcename="edit" caption="$General.Edit$" icon="Edit.png" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="webdavedit" caption="$general.update$" wrap="false" style="text-align: center;" columnname="webdav">
    </column>
    <column source="##ALL##" externalsourcename="name" caption="$general.name$" width="100%" wrap="false" sort="FileName">
    </column>
    <column source="##ALL##" externalsourcename="type" caption="$general.type$" wrap="false" sort="FileExtension">
    </column>
    <column source="##ALL##" externalsourcename="size" caption="$general.size$" wrap="false" sort="FileSize">
    </column>
    <column source="FileModifiedWhen" externalsourcename="FileModifiedWhen" caption="$general.modified$" wrap="false">
      <tooltip source="FileModifiedWhen" externalsourcename="FileModifiedWhentooltip"></tooltip>
    </column>
  </columns>
  <pager>
    <key name="ShowFirstLastButtons" value="false" />
    <key name="ShowDirectPageControl" value="false" />
    <key name="DefaultPageSize" value="10" />
    <key name="PageSizeOptions" value="10,25,50,100,##ALL##" />
  </pager>
  <options>
    <key name="DisplayFilter" value="false" />
    <key name="ShowSelection" value="false" />
  </options>
</grid>
