<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="select" externalsourcename="select" caption="$dialogs.list.actions.select$" icon="next.png" />
    <action name="view" externalsourcename="view" caption="$dialogs.list.actions.view$" icon="View.png" />
    <action name="edit" externalsourcename="editlibraryui" caption="$General.Edit$" icon="Edit.png" />
    <action name="delete" externalsourcename="delete" caption="$General.Delete$" icon="Delete.png" confirmation="$General.ConfirmDelete$" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="libraryupdate" caption="$general.update$" wrap="false" cssclass="UniGridActions" />
    <column source="##ALL##" externalsourcename="name" caption="$general.name$" width="100%" wrap="false" sort="FileName">
    </column>
    <column source="##ALL##" externalsourcename="extension" caption="$general.type$" wrap="false" sort="Extension">
    </column>
    <column source="##ALL##" externalsourcename="size" caption="$general.size$" wrap="false" sort="FileSize">
    </column>
    <column source="##ALL##" externalsourcename="modified" caption="$general.modified$" wrap="false" sort="Modified">
    </column>
  </columns>
  <pager>
    <key name="ShowFirstLastButtons" value="false" />
    <key name="ShowDirectPageControl" value="false" />
    <key name="DefaultPageSize" value="10" />
    <key name="PageSizeOptions" value="10,25,50,100,##ALL##" />
  </pager>
  <options>
    <key name="DisplayFilter" value="false" />
    <key name="ShowSelection" value="true" />
  </options>
</grid>
